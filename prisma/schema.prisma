generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  checkin Checkin[]
}

model Checkin {
  id String @id
  venue_id String
  user_id String
  venue Venue  @relation(fields: [venue_id], references: [id], onDelete: Cascade, onUpdate: Cascade )
  shout String
  is_mayor Boolean
  created_at DateTime
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

}

model Venue {
  id String @id
  name String
  location_id Int
  checkin Checkin[]
  location Location @relation(fields: [location_id], references: [id])
}

model Location {
  id Int @id @default(autoincrement())
  address String
  city String
  state String
  country String
  lat BigInt
  lng BigInt
  venue Venue[]
}

model Category {
  id String @id
  name String
  icon String
}

model Venue_Category {
  venue_id String
  category_id String
  @@id([venue_id, category_id])
}