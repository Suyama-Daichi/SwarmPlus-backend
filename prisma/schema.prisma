generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Checkin {
  id String @id
  venue_id String
  venue Venue  @relation(fields: [venue_id], references: [id], onDelete: Cascade, onUpdate: Cascade )
  shout String
  is_mayor Boolean
  created_at DateTime
}

model Venue {
  id String @id
  location_id Int
  checkin Checkin[]
  location Location[]
}

model Location {
  id Int @id
  venue_id String
  address String
  city String
  state String
  country String
  lat BigInt
  lng BigInt
  venue Venue @relation(fields: [venue_id], references: [id])
}

model Category {
  id String @id
  name String
  icon String
}

model View_Category {
  venue_id String
  category_id String
  @@id([venue_id, category_id])
}