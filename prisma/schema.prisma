generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  checkin Checkin[]
}

model Checkin {
  id String @id
  venue_id String
  user_id String
  shout String?
  is_mayor Boolean
  created_at DateTime
  venue Venue  @relation(fields: [venue_id], references: [id], onDelete: Cascade, onUpdate: Cascade )
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Venue {
  id String @id
  name String
  address String?
  city String?
  state String
  country String
  lat Float
  lng Float
  checkin Checkin[]
}


model Category {
  id String @id
  name String
  icon String
}

model Venue_Category {
  venue_id String
  category_id String
  @@id([venue_id, category_id])
}